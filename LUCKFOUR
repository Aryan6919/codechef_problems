#include <iostream>
using namespace std;
int main()
{
  int entry{};
  cin >> entry;
  for (int i = 1; i <= entry; i++)
  {
    int num{}, reminder{};
    cin >> num;
    int count{};
    while (num > 0)
    {
      reminder = num % 10;
      if (reminder == 4)
      {
        count++; //count++ shi rhega
      }
      num = num / 10;
    }
    cout << count << endl;
  }
  return 0;
}